<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE3F5"
    tools:context=".FirstQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#FABFE4"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="97dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/ic_love" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:text=" 소개를 부탁드릴께요 "
            android:textColor="@color/black70"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0A000000"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/binggrae_bold"
                    android:gravity="center_horizontal"
                    android:text=" 당신의 성별은\n 무엇입니까?"
                    android:textColor="@color/black70"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/binggrae_bold"
                        android:buttonTint="@color/white"
                        android:text="남성" />

                    <RadioButton
                        android:id="@+id/radioButton4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/binggrae_bold"
                        android:buttonTint="@color/white"
                        android:text="여성" />


                </RadioGroup>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/binggrae_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black70"
                    android:layout_marginTop="10dp"
                    android:text=" 당신의 나이는요?"
                    android:textSize="20sp" />

                <NumberPicker

                    android:id="@+id/numberPicker1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </NumberPicker>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/binggrae_bold"
                    android:gravity="center_horizontal"
                    android:text=" 상대방의 성별은\n 무엇입니까?"
                    android:textColor="@color/black30"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/rg2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioButton5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggrae_bold"
                        android:layout_weight="0.5"
                        android:buttonTint="@color/white"
                        android:text="여성" />

                    <RadioButton
                        android:id="@+id/radioButton6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/binggrae_bold"
                        android:layout_weight="0.5"
                        android:buttonTint="@color/white"
                        android:text="남성" />


                </RadioGroup>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/binggrae_bold"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black70"
                    android:layout_marginTop="10dp"
                    android:text=" 상대방의 나이는요?"
                    android:textSize="20sp" />

                <NumberPicker
                    android:id="@+id/numberPicker2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                </NumberPicker>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:text="두 사람은 현재 어떤 상태입니까?"
            android:textColor="@color/black70"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/rg3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:buttonTint="@color/white"
                android:text="결혼"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton43"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:buttonTint="@color/white"
                android:text="연인"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton44"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:buttonTint="@color/white"
                android:text="썸"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:buttonTint="@color/white"
                android:text="짝사랑 / 이별"
                android:textSize="12sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:text="당신의 이름은?"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:fontFamily="@font/binggrae"
            android:gravity="center_horizontal"
            android:hint="이름"
            android:inputType="textPersonName"
            />

        <Button
            android:id="@+id/next_btn"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/white_btn"
            android:fontFamily="@font/binggrae_bold"
            android:text="다 음 "
            android:textColor="#FABFE4" />

<!--        <Button-->
<!--            android:id="@+id/button5"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="test" />-->

    </LinearLayout>

</FrameLayout>
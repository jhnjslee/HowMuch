<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFE3F5"
    tools:context=".NinthQuestion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="#FABFE4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/binggrae_bold"
            android:text="8 / 8"
            android:gravity="center_horizontal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/black70"
            android:text="당신이 준 선물은 내게 언제나 특별하다."
            android:textSize="22sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇다"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇지 않다"
                android:textSize="12sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/black70"
            android:text="당신이 나를 만질 때 기분이 좋다."
            android:textSize="22sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇다"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇지 않다"
                android:textSize="12sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/black70"
            android:text="당신이 내가 요청한 일을 열정적으로 할 때 사랑을 느낀다."
            android:textSize="22sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇다"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇지 않다"
                android:textSize="12sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/black70"
            android:text="너무나 고맙다는 말을 들을 때 사랑받고 있음을 느낀다."
            android:textSize="22sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇다"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇지 않다"
                android:textSize="12sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textVieww"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/black70"
            android:text="나는 매일 당신이 만져줬으면 한다."
            android:textSize="22sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton41"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:gravity="center"
                android:fontFamily="@font/binggrae"
                android:text="그렇다"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇지 않다"
                android:textSize="12sp" />

        </RadioGroup>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/binggrae_bold"
            android:gravity="center_horizontal"
            android:textColor="@color/black70"
            android:text="나는 매일 당신에게 애정담긴 칭찬을 들어야 한다."
            android:textSize="22sp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇다"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radioButton61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"
                android:fontFamily="@font/binggrae"
                android:text="그렇지 않다"
                android:textSize="12sp" />

        </RadioGroup>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/white_btn"
            android:text="다 음 "
            android:textColor="#FABFE4" />
    </LinearLayout>
</FrameLayout>